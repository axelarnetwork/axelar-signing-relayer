{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/.*\\.e2e-spec\\.ts$",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/**/*.spec.ts",
    "!<rootDir>/test/**"
  ],
  "coverageDirectory": "<rootDir>/coverage/e2e",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
